#!/bin/bash

# 2014 Jon Suderman
# https://github.com/suderman/local/

if [ $# -eq 0 ]; then
  echo "Usage: apt-bundle Aptfile"
  exit 1
fi

if [ ! -r $1 ]; then
  echo "Error: file not found"
  exit 1
fi

while read package
do
  if [[ ! ${package:0:1} == '#' ]]; then
    if [[ "$package" ]]; then
      apt-get -y install $package
    fi
  fi
done < $1

